<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>

<HBox spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller">
    <children>
        <VBox alignment="TOP_CENTER" fillWidth="false" spacing="10.0" HBox.hgrow="NEVER">
            <children>
                <Button fx:id="startButton" mnemonicParsing="false" text="Start" />
                <Button fx:id="pauseButton" mnemonicParsing="false" text="Pause" />
            <Label text="Score:" />
            <Label fx:id="scoreLabel" alignment="CENTER_RIGHT" text="0" textAlignment="RIGHT" />
            </children>
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
            <children>
                <Canvas fx:id="canvas" height="200.0" width="200.0" VBox.vgrow="ALWAYS" />
            </children>
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</HBox>
